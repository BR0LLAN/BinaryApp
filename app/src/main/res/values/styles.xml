<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextTitleScreens" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="ButtonOutlineSeeMore" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_0</item>
        <item name="fontFamily">@font/montserrat_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BtnNavigation" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="SingleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>